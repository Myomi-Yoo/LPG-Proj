<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="game.LPG.sportsMatch">
	<insert id="insert" parameterType="sportsMatch">
		insert into sportsMatch
		values(sportsMatch_seq.nextVal,1,#{mchName},#{mchDate},#{mchPlay},null,#{mchPrice},#{mchUrgent},#{mchContent},#{mchGender},#{mchShoes},#{mchAbil},#{mchType},#{mchDateStart},#{mchDateEnd})
	</insert>
	<select id="matchlist" resultType="sportsMatch" parameterType="select">
		select m.*, g.* 
		from sportsmatch m, ground g, groundreserve gr
		where m.mchno=gr.mchno 
			and g.grdno=gr.grdno
			and m.mchdate=#{mchDate}
			and m.mchtype like '%' || #{mchType}
			and g.grdarea like '%' || #{grdArea} || '%' 
			and m.mchname like '%' || #{mchName} || '%'
	</select>
	<select id="mchNoSearch" resultType="sportsMatch" parameterType="String">
		select * from sportsMatch where mchNo = #{mchNo}
	
	</select>
</mapper>